<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. >
        <item name="colorPrimary">@color/rougePrincipal</item>
        <item name="colorPrimaryDark">@color/rougeFade</item>
        <item name="colorAccent">@color/colorAccent</item-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="list_item_appearance">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SplashSceenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black_light</item>
        <item name="colorAccent">@color/black_background</item>
        <item name="colorSecondary">@color/black</item>
    </style>

    <style name="SeekBar" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/white</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/white</item>
    </style>

    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <!--item name="android:progressBackgroundTint" tools:ignore="NewApi">@color/white</item-->
        <!--item name="android:progressTint" tools:ignore="NewApi">@color/yellow_inactive</item>
        <item name="android:minWidth">200dp</item-->
    </style>

    <style name="DatePickerSpinner">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/grayPale</item>
    </style>

    <style name="TooltipTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorLink">@android:color/holo_blue_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
