<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ContentAddBeneficier"
    android:orientation="vertical">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/backFrame"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:tint="@color/black54_disable"
                    android:src="@drawable/ic_arrow_back"/>


                <TextView
                    android:id="@+id/title_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="Enregistrement d'un contrat"
                    android:layout_gravity="center"
                    android:layout_marginStart="20sp"
                    android:layout_marginLeft="20sp" />


            </LinearLayout>



        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="50dp">




                <LinearLayout
                    android:id="@+id/timeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:tint="@color/colorGreen"
                            app:srcCompat="@drawable/timeline_active" />


                        <View
                            android:layout_width="90dp"
                            android:layout_height="1.5dp"
                            android:layout_gravity="center"
                            android:background="@color/grayPale" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:tint="@color/colorGreen"
                            app:srcCompat="@drawable/circle_black" />


                        <View
                            android:layout_width="90dp"
                            android:layout_height="1.5dp"
                            android:layout_gravity="center"
                            android:background="@color/grayPale" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            app:srcCompat="@drawable/timeline_active" />


                        <View
                            android:layout_width="90dp"
                            android:layout_height="1.5dp"
                            android:layout_gravity="center"
                            android:background="@color/grayPale" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:tint="@color/grayPale"
                            app:srcCompat="@drawable/circle_black" />

                    </LinearLayout>


                </LinearLayout>




                <TextView
                    android:id="@+id/title"
                    android:layout_below="@+id/timeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    style="@style/TextAppearance.AppCompat"
                    android:layout_marginBottom="15dp"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:text="@string/infos_beneficiaire"/>




                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tablayout"
                    android:minHeight="?attr/actionBarSize"
                    app:tabTextColor="@color/black"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>



                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    app:tabMode="scrollable"
                    android:layout_marginTop="10dp"
                    android:id="@+id/pager"
                    android:layout_marginBottom="10sp"/>



            </LinearLayout>





        </LinearLayout>




        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10sp"
            android:layout_marginEnd="15dp">

            <Button
                android:id="@+id/annuler"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="PrÃ©cedent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/button_cancel"/>

            <Button
                android:id="@+id/suivant"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/suivant"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_next"
                android:layout_alignParentRight="true" />

        </RelativeLayout>






    </RelativeLayout>




</LinearLayout>