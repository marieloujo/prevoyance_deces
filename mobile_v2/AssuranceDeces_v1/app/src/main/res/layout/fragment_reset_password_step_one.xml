<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ResetPassword">



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="Mot de passe oublié ?"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="@color/black_background"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Veuillez entrer votre identifiant et votre numéro de téléphone"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/black_background"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@mipmap/forgotten_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />




    <EditText
        android:id="@+id/editTextIdentifiant"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:hint="Identifiant"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="13sp"
        android:paddingLeft="60dp"
        android:textColor="@color/black_background"
        android:background="@drawable/bg_txt_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />





    <TextView
        android:id="@+id/textErrorIdentifiant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/red_active"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextIdentifiant" />





    <br.com.sapereaude.maskedEditText.MaskedEditText
        xmlns:mask="http://schemas.android.com/apk/res-auto"
        android:id="@+id/etTelephoneUser"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="13sp"
        android:hint="22990000000"
        mask:mask="(###) ### - ### - ##"
        mask:keep_hint="true"
        android:paddingStart="60dp"
        tools:ignore="RtlSymmetry"
        android:textColor="@color/black_background"
        android:inputType="phone"
        android:background="@drawable/bg_txt_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textErrorIdentifiant"
        android:paddingLeft="60dp" />





    <TextView
        android:id="@+id/textErrorTelephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/red_active"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTelephoneUser" />





    <LinearLayout
        android:id="@+id/validateSearchAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textErrorTelephone">




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <LinearLayout
                android:id="@+id/bottom_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Suivant"
                    android:textSize="15sp"
                    android:textColor="@color/black_background"
                    android:layout_gravity="center"
                    android:gravity="center"/>


                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_btn_login" />


            </LinearLayout>




            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                style="@style/Widget.AppCompat.Button.Colored"
                android:visibility="invisible"
                android:id="@+id/btn_loaader"
                android:layout_width="wrap_content"
                android:background="@drawable/button_cancel"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                app:finalCornerAngle="50dp"
                app:initialCornerAngle="0dp"
                app:spinning_bar_color="#FFFFFF"
                app:spinning_bar_padding="0dp"
                app:spinning_bar_width="3dp"/>





        </RelativeLayout>



