<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ResetPassword">




    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="Changement du mot de passe"
        android:textAlignment="center"
        android:textSize="17dp"
        android:textColor="@color/black_background"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Veuillez entrer le nouveau mot de passe"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/black_background"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@mipmap/forgotten_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />



    <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:paddingEnd="20dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="13sp"
        android:paddingLeft="60dp"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:textColor="@color/black_background"
        android:background="@drawable/bg_txt_password"
        app:drawable_show="@drawable/ic_visibility_on"
        app:drawable_hide="@drawable/ic_visibility_off"
        app:tint_color="@color/input_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:paddingRight="20dp" />





    <TextView
        android:id="@+id/textErrorIdentifiant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/red_active"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />





    <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
        android:id="@+id/editTextPasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bg_txt_password"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:paddingEnd="20dp"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="13sp"
        android:paddingLeft="60dp"
        android:hint="Confirmer mot de passe"
        android:textColor="@color/black_background"
        app:tint_color="@color/input_border"
        android:inputType="textPassword"
        app:drawable_show="@drawable/ic_visibility_on"
        app:drawable_hide="@drawable/ic_visibility_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textErrorIdentifiant"
        android:paddingRight="20dp" />





    <TextView
        android:id="@+id/textErrorPasswordConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/red_active"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordConfirm" />





    <LinearLayout
        android:id="@+id/validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textErrorPasswordConfirm">




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <LinearLayout
                android:id="@+id/bottom_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Valider"
                    android:textSize="15sp"
                    android:textColor="@color/black_background"
                    android:layout_gravity="center"
                    android:gravity="center"/>


                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_btn_login" />


            </LinearLayout>




            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                style="@style/Widget.AppCompat.Button.Colored"
                android:visibility="invisible"
                android:id="@+id/btn_loaader"
                android:layout_width="wrap_content"
                android:background="@drawable/button_cancel"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                app:finalCornerAngle="50dp"
                app:initialCornerAngle="0dp"
                app:spinning_bar_color="#FFFFFF"
                app:spinning_bar_padding="0dp"
                app:spinning_bar_width="3dp"/>





        </RelativeLayout>



    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>