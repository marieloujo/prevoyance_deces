<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MarchandMainActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentbar">

        <include layout="@layout/content_appbar" />

        <include layout="@layout/item_next_screen" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content_main_marchand"
        android:layout_below="@+id/contentbar"
        android:layout_marginBottom="60dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.fxn.BubbleTabBar
            android:id="@+id/bubbleTabBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:elevation="20dp"
            android:padding="7dp"
            app:bubbletab_menuResource="@menu/menu_marchand"
            app:bubbletab_disabled_icon_color="@color/purple_active"
            app:bubbletab_horizontal_padding="20dp"
            app:bubbletab_icon_size="20dp"
            app:bubbletab_title_size="13sp"
            app:bubbletab_vertical_padding="15dp"
            tools:ignore="UnusedAttribute" />

        <com.fxn.BubbleTabBar
            android:visibility="invisible"
            android:id="@+id/bubbleTabBarSm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:elevation="20dp"
            android:padding="7dp"
            app:bubbletab_menuResource="@menu/menu_supermarchand"
            app:bubbletab_disabled_icon_color="@color/purple_active"
            app:bubbletab_horizontal_padding="20dp"
            app:bubbletab_icon_size="20dp"
            app:bubbletab_title_size="13sp"
            app:bubbletab_vertical_padding="15dp"
            tools:ignore="UnusedAttribute" />

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingAdd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/yellow_active"
        android:src="@drawable/ic_add_"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp" />

</RelativeLayout>