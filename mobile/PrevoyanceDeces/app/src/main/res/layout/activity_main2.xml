<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/content_appbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        android:id="@+id/content_main"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.fxn.BubbleTabBar
            android:id="@+id/bubbleTabBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:elevation="20dp"
            android:padding="7dp"
            app:bubbletab_menuResource="@menu/menu"
            app:bubbletab_disabled_icon_color="@color/purple_active"
            app:bubbletab_horizontal_padding="20dp"
            app:bubbletab_icon_size="20dp"
            app:bubbletab_title_size="13sp"
            app:bubbletab_vertical_padding="15dp"
            tools:ignore="UnusedAttribute"
            style="@style/MyProgressBar">
        </com.fxn.BubbleTabBar>

        <com.fxn.BubbleTabBar
            android:visibility="invisible"
            android:id="@+id/bubbleTabBarV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:elevation="20dp"
            android:padding="7dp"
            app:bubbletab_menuResource="@menu/menu_visiteur"
            app:bubbletab_disabled_icon_color="@color/purple_active"
            app:bubbletab_horizontal_padding="20dp"
            app:bubbletab_icon_size="20dp"
            app:bubbletab_title_size="13sp"
            app:bubbletab_vertical_padding="15dp"
            tools:ignore="UnusedAttribute">
        </com.fxn.BubbleTabBar>

    </RelativeLayout>


</RelativeLayout>
