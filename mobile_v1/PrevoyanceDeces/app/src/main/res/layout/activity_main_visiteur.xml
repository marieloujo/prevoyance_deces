<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/content_appbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        android:id="@+id/content_main"
        android:layout_marginBottom="60dp"/>

    <com.fxn.BubbleTabBar
        android:layout_marginTop="20sp"
        android:id="@+id/bubbleTabBarV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="20dp"
        android:padding="7dp"
        app:bubbletab_menuResource="@menu/menu_visiteur"
        app:bubbletab_disabled_icon_color="@color/purple_active"
        app:bubbletab_horizontal_padding="20dp"
        app:bubbletab_icon_size="20dp"
        app:bubbletab_title_size="13sp"
        app:bubbletab_vertical_padding="15dp"
        tools:ignore="UnusedAttribute"
        style="@style/MyProgressBar">
    </com.fxn.BubbleTabBar>


</RelativeLayout>